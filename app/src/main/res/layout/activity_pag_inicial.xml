<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagina_inicial"
    tools:context=".PagInicial">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="300dp"
        android:layout_height="525dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/Matematica"
            android:layout_width="151dp"
            android:layout_height="226dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="1"
            android:backgroundTint="#00221A1A"
            android:contentDescription="Matematica"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/copascarta" />

        <ImageButton
            android:id="@+id/Historia"
            android:layout_width="151dp"
            android:layout_height="226dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Historia"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/espadascartas" />

        <ImageButton
            android:id="@+id/Geografia"
            android:layout_width="151dp"
            android:layout_height="226dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Geografia"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pauscartas" />

        <ImageButton
            android:id="@+id/Diversos"
            android:layout_width="151dp"
            android:layout_height="226dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="Diversos"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ouroscarta" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>